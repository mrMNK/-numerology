<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp">

        <Button
            android:id="@+id/matrixButton"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@drawable/matrix_button" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp">

        <Button
            android:id="@+id/compatibilityButton"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@drawable/compatibility_matrix" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp">

        <Button
            android:id="@+id/descriptionButton"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@drawable/description_button" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp">

        <Button
            android:id="@+id/accountButton"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@drawable/account_button" />

    </RelativeLayout>



</LinearLayout>