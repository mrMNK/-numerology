<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="@string/compatibility_title"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/leftSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/lestSpinnerUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_below="@+id/leftSpinner"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/path" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <Spinner
                android:id="@+id/rightSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"/>

            <ImageView
                android:id="@+id/rightSpinnerUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_below="@+id/rightSpinner"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/path" />

        </RelativeLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <fragment
            android:id="@+id/leftCompatibilityFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <fragment
            android:id="@+id/rightCompatibilityFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/compatibilityDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="13sp"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/colorPrimaryDark" />

    </ScrollView>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <Button
            android:id="@+id/saveResultButton"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/oval_shape_button"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:text="@string/save_result" />

    </RelativeLayout>

    <fragment
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"/>
</LinearLayout>